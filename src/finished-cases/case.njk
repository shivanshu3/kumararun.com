---
layout: base.njk
pagination:
  data: finishedCases
  size: 1
  alias: finishedCase
permalink: "{{ finishedCase.link }}"
---

<section class="space-y-6">
  <header>
    <h1 class="text-3xl font-semibold text-slate-900">{{ finishedCase.name }}</h1>
  </header>

  <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {% for image in finishedCase.images %}
      <div class="overflow-hidden rounded-[6px] shadow-sm shadow-slate-200">
        <img
          src="{{ image }}"
          alt="{{ finishedCase.name }} image {{ loop.index }}"
          class="w-full h-full object-cover"
          loading="lazy"
        />
      </div>
    {% endfor %}
  </div>
</section>
